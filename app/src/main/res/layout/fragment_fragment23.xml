<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ania.app42.fragment23">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText31"
        android:hint="ImiÄ™"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/button3"
        android:layout_alignEnd="@+id/spinner3" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText32"
        android:hint="Rasa"
        android:layout_below="@+id/editText31"
        android:layout_alignEnd="@+id/editText31" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:hint="Wiek"
        android:id="@+id/editText33"
        android:layout_below="@+id/editText32"
        android:layout_alignEnd="@+id/editText32" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner3"
        android:layout_below="@+id/editText33"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/button3" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Czarny"
        android:id="@+id/checkBox3"
        android:layout_below="@+id/spinner3"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zapisz"
        android:id="@+id/button3"
        android:layout_below="@+id/spinner3"
        android:layout_alignStart="@+id/imageView3"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:src = "@drawable/cat"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/checkBox3"
        android:layout_marginStart="144dp"
        android:layout_alignBottom="@+id/checkBox3" />
</RelativeLayout>
